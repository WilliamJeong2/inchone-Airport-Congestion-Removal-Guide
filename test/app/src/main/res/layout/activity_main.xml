<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_incheon_congestion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="25dp"
        android:text="현재 출국장 대기인원"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="50dp"
        android:text="1, 6번 출국장은 패스트트랙으로 대기인원에서 제외합니다."
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/add_info"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="240dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/add_info" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="120dp"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="120dp"
         />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="120dp"
         />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="120dp"
         />


    <TextView
        android:id="@+id/status1"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/status2"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/status3"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/status4"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="30dp"
        >


        <ImageButton
            android:id="@+id/flight_takeoff_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:src="@drawable/flight_takeoff_info"
            android:text="이륙/착륙"

            />

        <ImageButton
            android:id="@+id/delay_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:padding="0dp"
            android:src="@drawable/delay_info" />


    </FrameLayout>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="150dp"
        >

        <ImageButton
            android:id="@+id/flight_land_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:src="@drawable/flight_land_info" />

        <ImageButton
            android:id="@+id/congestion_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:padding="0dp"
            android:src="@drawable/congestion_info"
            android:text="세부 혼잡도" />




    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="270dp"
        >

        <ImageButton
            android:id="@+id/parking_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:src="@drawable/parking_info" />

        <ImageButton
            android:id="@+id/convienience_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:padding="0dp"
            android:src="@drawable/convienience_info" />


    </FrameLayout>


</FrameLayout>


