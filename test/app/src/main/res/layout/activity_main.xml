<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_incheon_congestion">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/flight_takeoff_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:padding="0dp"
            android:src="@drawable/flight_takeoff_info"
            android:text="이륙/착륙" />

        <ImageButton
            android:id="@+id/delay_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:src="@drawable/delay_info" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/congestion_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:padding="0dp"
            android:src="@drawable/congestion_info"
            android:text="세부 혼잡도" />

        <ImageButton
            android:id="@+id/flight_land_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:src="@drawable/flight_land_info" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/parking_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:padding="0dp"
            android:src="@drawable/parking_info" />

        <ImageButton
            android:id="@+id/convenience_button"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:src="@drawable/convienience_info"/>


    </LinearLayout>


</LinearLayout>


